<div class="wrapper">

  <div class="sidebar-wrapper container">
    <div class="row">
      <div class="col-md-12 keyboard" id="root">
        <script>
          kaseyIsGreat();
        </script>
      </div>
    </div>
  </div>

  <div class="page-content-wrapper">
    <div class="container">
      <!-- Validation failure messages -->
      <% if @status.errors.any? %>
        <% @status.errors.full_messages.each do |message| %>
          <div class="alert alert-dismissable alert-danger">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <%= message %>
          </div>
        <% end %>
      <% end %>

      <div class="page-header">
        <h3>Post a New Status</h3>
      </div>

      <div class="row">
        <div class="col-md-12">
          <form action="/create_status" method="post">
            <!-- Hidden input for authenticity token to protect from forgery -->
            <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

            <!-- Label and input for status -->
            <div class="form-group">
              <label for="emoji-input" class="control-label">
                Status
              </label>

              <input type="text" id="emoji-input" name="status" placeholder="Status" class="form-control emoji-input" value="<%= @status.status %>">
            </div>

            <!-- Hidden input for user_id -->
            <div class="form-group">
              <input type="hidden" id="user_id" name="user_id" class="form-control" value="<%= current_user.id %>">
            </div>

            <button class="btn btn-success">
              Post Status
            </button>
            or
            <a href="/statuses">Cancel</a>
          </form>
        </div>
      </div>
    </div>
</div>
