<!-- Validation failure messages -->
<% if @reaction.errors.any? %>
  <% @reaction.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Reaction</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_reaction" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for reaction -->
      <div class="form-group">
        <label for="reaction" class="control-label">
          Reaction
        </label>

        <input type="text" id="reaction" name="reaction" placeholder="Reaction" class="form-control" value="<%= @reaction.reaction %>">
      </div>

      <!-- Label and input for status_id -->
      <div class="form-group">
        <label for="status_id" class="control-label">
          Status
        </label>

        <input type="text" id="status_id" name="status_id" placeholder="Status" class="form-control" value="<%= @reaction.status_id %>">
      </div>

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @reaction.user_id %>">
      </div>

      <button class="btn btn-success">
        Create Reaction
      </button>
      or
      <a href="/reactions">Cancel</a>
    </form>
  </div>
</div>
