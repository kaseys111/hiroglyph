<div class="wrapper">

  <div class="sidebar-wrapper container">
    <div class="row">
      <div class="col-md-12 keyboard" id="root">
        <script>
          kaseyIsGreat();
        </script>
      </div>
    </div>
  </div>

  <div class="page-content-wrapper">
    <div class="container">
      <!-- Validation failure messages -->
      <% if @comment.errors.any? %>
        <% @comment.errors.full_messages.each do |message| %>
          <div class="alert alert-dismissable alert-danger">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <%= message %>
          </div>
        <% end %>
      <% end %>

      <div class="page-header">
        <h3>Edit Comment</h3>
      </div>

      <div class="row">
        <div class="col-md-12">
          <form action="/update_comment/<%= @comment.id %>" method="post">
            <!-- Hidden input for authenticity token to protect from forgery -->
            <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

            <!-- Label and input for status -->
            <div class="form-group">
              <label for="emoji-input" class="control-label">
                Comment
              </label>

              <input type="text" id="emoji-input" name="body" class="form-control" placeholder="Add a comment..." value="<%= @comment.body %>">
            </div>

            <!-- Hidden input for user_id -->
            <div class="form-group">
              <input type="hidden" id="user_id" name="user_id" class="form-control" value="<%= current_user.id %>">
            </div>

            <!-- Hidden input for status_id -->
            <div class="form-group">
              <input type="hidden" id="status_id" name="status_id" class="form-control" value="<%= @comment.status_id %>">
            </div>

            <button class="btn btn-success">
              Update Comment
            </button>
            or
            <button class="btn-link" onclick="history.back(-1)">Cancel</button>
          </form>
        </div>
      </div>
    </div>
</div>
